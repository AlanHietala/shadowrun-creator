{
    "extends": ["eslint:recommended",
        "plugin:react/recommended"],
    "env": {
        "browser": true,
        "es6": true,
        "commonjs": true,
        "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        }
    },
    "plugins": [
        "react",
        "import"
    ],
    "rules": {
        "semi": ["error", "never"],
        "indent": ["error", 2]
    }
}